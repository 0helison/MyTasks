<h1>Todas as tasks</h1>

<ul class="task-list">
  {{#each tasks}}
    <li>
      {{#if this.done}}
        <span class="title-done">{{this.title}}</span>
      {{else}}
        <span class="title">{{this.title}}</span>
      {{/if}}
      <span class="actions">
        <form action="/tasks/updatestatus" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="hidden" name="done" value="{{this.done}}">
          <button type="submit">
            <i class="bi bi-patch-check-fill"></i>
          </button>
        </form>
        <a href="/tasks/view/{{this.id}}"><i class="bi bi-eye-fill"></i></a>
        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tasks/remove" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">
            <i class="bi bi-x-circle-fill"></i>
          </button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>
